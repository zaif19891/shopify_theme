{% assign shipping_value = 9900.0 %}
<form action="{{ routes.cart_url }}" class="rc90-box" method="post">
  <div class="robust-cart-json" data-cart-json="{{ cart | json | escape }}"></div>
  {% comment %} Header Section {% endcomment %}
  <div class="rc90-header">
    <h2 class="rc90-header-title">{{ 'Cart.cart' | t }}</h2>

    <div class="rc90-header-close">
      {{ robustCartXIcon }}
    </div>
  </div>

  <div class="robust-main">
    <div class="robust-items">
      <p class="rc90-taxes">{{ 'Cart.taxes_shipping' | t }}</p>
      {% if cart.item_count == 0 %}
        <div class="rc90-empty">
          <div class="rc90-empty-inner">
            <div class="rc90-empty-inner-heading">{{ 'Cart.empty' | t }}</div>
            <div class="rc90-empty-inner-continue">{{ 'Cart.continue' | t }}</div>
          </div>
        </div>
      {% else %}
        {% comment %} Items {% endcomment %}
        <div class="rc90-items">
          {% for item in cart.items %}
            <div class="rc90-item {% if forloop.index == cart.items.size %}no-border-item{% endif %}">
              <div class="rc90-item-image">
                <img
                  class="rc90-item-image-img"
                  alt="{{ item.title }}"
                  src="{{ item.image | img_url: '200x' }}"
                >
              </div>

              <div class="rc90-item-main">
                <div class="rc90-item-main-header">
                  <div class="rc90-item-main-header-titles">
                    <h3 class="rc90-item-main-header-titles-title">
                      <a class="rc90-item-main-header-titles-title-anchor" href="{{ item.url }}">
                        {{- item.product.title -}}
                      </a>
                    </h3>

                    {% if item.variant.title != 'Default Title' or item.selling_plan_allocation != blank %}
                      <ul class="rc90-item-main-header-titles-subtitle">
                        {% if item.variant.title != 'Default Title' -%}
                          <li>{{- item.variant.title -}}</li>
                        {%- endif %}

                        {% if item.selling_plan_allocation != blank -%}
                          <li>{{ item.selling_plan_allocation.selling_plan.name }}</li>
                        {%- endif %}
                      </ul>
                    {% endif %}
                  </div>

                  <div class="rc90-item-main-header-remove" data-line-item-key="{{ item.key }}">
                    {{ robustCartXIcon }}
                  </div>
                </div>

                <div class="rc90-item-main-footer">
                  <div class="rc90-item-main-footer-quantity">
                    <div
                      class="rc90-item-main-footer-quantity-minus"
                      data-quantity="{{ item.quantity }}"
                      data-line-item-key="{{ item.key }}"
                    >
                      {{ robustCartMinusIcon }}
                    </div>
                    <div class="rc90-item-main-footer-quantity-value">
                      {{ item.quantity }}
                    </div>
                    <div
                      class="rc90-item-main-footer-quantity-plus"
                      data-quantity="{{ item.quantity }}"
                      data-line-item-key="{{ item.key }}"
                    >
                      {{ robustCartPlusIcon }}
                    </div>
                  </div>

                  <div class="rc90-item-main-footer-prices">
                    {% if item.product.compare_at_price > item.price %}
                      <span class="rc90-item-main-footer-prices-compare">
                        {{- item.product.compare_at_price | times: item.quantity | money -}}
                      </span>
                    {% endif %}
                    <span class="rc90-item-main-footer-prices-price">
                      {{- item.price | times: item.quantity | money -}}
                    </span>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}

      <div class="robust-cart-recommended">
        <div class="robust-cart-recommended-body">
          {% for recommend_product in collections['upsells'].products %}
            {% render 'product-grid-item', product: recommend_product, show_review: false, from_robust: true,show_sale_price: true %}
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="robust-pricing">
      {% comment %} Pricing {% endcomment %}
      <div class="rc90-bottom">
        {% if cart.item_count > 0 %}
          <div class="shipping-bar">
            <div>
              {% if shipping_value <= cart.total_price %}
                <div>
                  <span class="rc90-totals-row-value">Free Shipping Unlocked!</span>
                </div>
              {% else %}
                <div>
                  <span class="rc90-totals-row-value">
                    <span>{{ shipping_value | minus: cart.total_price | money_without_trailing_zeros }}</span> until free shipping
                  </span>
                </div>
              {% endif %}
              <div>
                {%- liquid
                  assign shipping_bar_width = cart.total_price | divided_by: shipping_value | times: 100
                  if shipping_bar_width > 100
                    assign shipping_bar_width = 100
                  endif
                %}
                <div class="shipping-bar-indicator">
                  <div style="height: 10px; width: {{ shipping_bar_width }}%; background-color: {% if shipping_bar_width < 100 %}rgb(255, 0, 0){% else %}rgb(86, 227, 114){% endif %};"></div>
                  <div></div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
        <div class="rc90-totals">
          {% if cart.total_discounts > 0 %}
            <div class="rc90-totals-row">
              <h3 class="rc90-totals-row-label">{{ 'Cart.discounts' | t }}</h3>
              <span class="rc90-totals-row-value">{{ cart.total_discounts | money }}</span>
            </div>
          {% endif %}

          <div class="rc90-totals-row">
            <h3 class="rc90-totals-row-label">{{ 'Cart.subtotal' | t }}</h3>
            <span class="rc90-totals-row-value">{{ cart.total_price | money }}</span>
          </div>
        </div>

        <div class="rc90-buttons">
          <button type="submit" name="checkout" class="rc90-buttons-checkout">
            {% render "icon-lock" %} {{ 'Cart.checkout_securely' | t }}
          </button>

          {% if section.settings.show_dynamic %}
            <div class="rc90-buttons-dynamic robust-addition-checkoutbuttons">
              {{ content_for_additional_checkout_buttons }}
            </div>
          {% endif %}

          {% if section.settings.show_continue %}
            <div class="rc90-buttons-continue-shopping">{{ 'Cart.continue' | t }}</div>
          {% endif %}
          
          {% if section.settings.show_trust %}
            <ul class="rc90-trust-badges">
              <li><img src="{{ 'icon_visa_white.png' | file_url }}" /></li>
              <li><img src="{{ 'icon_master_card_white.png' | file_url }}" /></li>
              <li><img src="{{ 'icon_american_express_white.png' | file_url }}" /></li>
              <li><img src="{{ 'icon_discover_white.png' | file_url }}" /></li>
            </ul>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</form>

