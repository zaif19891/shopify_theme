<div class="logo-list logo-list--{{ section.id }} logo-list--{{ section.settings.color }}  {% if section.settings.spacing == 'both' %}section-spacing--both{% elsif section.settings.spacing == 'top' %}section-spacing--top{% else  %}section-spacing--bottom{% endif %}">
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="logo-list-logos-wrap">
    <div class="logo-list-logos">
      <div class="logo-list-logos-slide">
        {% for block in section.blocks %}
          <img
            class="logo-list-logos-slide-logo"
            width="{{ block.settings.width }}"
            src="{{ block.settings.image | img_url: 'master' }}"
          >
        {% endfor %}
      </div>
      <div class="logo-list-logos-slide">
        {% for block in section.blocks %}
          <img
            class="logo-list-logos-slide-logo"
            width="{{ block.settings.width }}"
            src="{{ block.settings.image | img_url: 'master' }}"
          >
        {% endfor %}
      </div>
      <div class="logo-list-logos-slide">
        {% for block in section.blocks %}
          <img
            class="logo-list-logos-slide-logo"
            width="{{ block.settings.width }}"
            src="{{ block.settings.image | img_url: 'master' }}"
          >
        {% endfor %}
      </div>
      <div class="logo-list-logos-slide">
        {% for block in section.blocks %}
          <img
            class="logo-list-logos-slide-logo"
            width="{{ block.settings.width }}"
            src="{{ block.settings.image | img_url: 'master' }}"
          >
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Logo list",
  "tag": "div",
  "settings": [
    {
      "type": "select",
      "label": "spacing",
      "id": "spacing",
      "default": "both",
      "options": [
        {
          "value": "both",
          "label": "Top and bottom"
        },
        {
          "value": "top",
          "label": "Top only"
        },
        {
          "value": "bottom",
          "label": "Bottom only"
        }
      ]
    },
    {
      "type": "select",
      "label": "Background color",
      "id": "color",
      "default": "normal",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "alt",
          "label": "Normal w/ background 2"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading text"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo"
        },
        {
          "type": "range",
          "min": 40,
          "max": 300,
          "step": 5,
          "unit": "px",
          "default": 120,
          "id": "width",
          "label": "Logo width"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo list"
    }
  ]
}
{% endschema %}
