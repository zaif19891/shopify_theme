<div class="heading-divide heading-divide--{{ section.id }} heading-divide--{{ section.settings.color }} {% if section.settings.spacing == 'both' %} section-spacing--both {% elsif section.settings.spacing == 'top' %} section-spacing--top {% else  %} section-spacing--bottom {% endif %}">
  <div class="width">
    <div class="heading-divide-flex">
      <h2>{{ section.settings.text }}</h2>
      <div class="heading-divide-flex-divide"></div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Heading Text",
  "settings": [
    {
      "type": "select",
      "label": "spacing",
      "id": "spacing",
      "default": "both",
      "options": [
        {
          "value": "both",
          "label": "Top and bottom"
        },
        {
          "value": "top",
          "label": "Top only"
        },
        {
          "value": "bottom",
          "label": "Bottom only"
        }
      ]
    },
    {
      "type": "select",
      "label": "Background color",
      "id": "color",
      "default": "normal",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "alt",
          "label": "Normal w/ background 2"
        },
        {
          "value": "inverse",
          "label": "Alternate"
        }
      ]
    },
    {
      "type": "text",
      "id": "text",
      "label": "Heading text",
      "default": "Your heading text will go here."
    }
  ],
  "presets": [
    {
      "name": "Heading Text"
    }
  ]
}
{% endschema %}
